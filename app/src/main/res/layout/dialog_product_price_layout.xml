<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="@color/color_ff"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <TextView
      android:id="@+id/tv_close"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="17sp"
      android:textColor="@color/color_99"
      android:text="取消"/>
    <TextView
      android:id="@+id/tv_save"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textSize="17sp"
      android:textColor="@color/color_336"
      android:text="保存"/>
  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_e5"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:textColor="@color/color_1a"
      android:text="价格"/>
    <EditText
      android:id="@+id/edt_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:inputType="numberDecimal"
      android:background="@null"
      android:layout_weight="1"
      android:textColor="@color/color_1a"
      android:textSize="15sp"
      android:textColorHint="@color/color_cc"
      android:hint="请输入价格"/>
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_e5"/>

  <TextView
    android:id="@+id/tv_oprice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:textSize="14sp"
    android:textColor="@color/color_99"
    android:text="佣金 ￥8.20"/>

  <TextView
    android:id="@+id/tv_price_limit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:textSize="14sp"
    android:textColor="@color/color_336"
    android:text="设置价格不能低于最低价 ￥8.20"/>


</LinearLayout>