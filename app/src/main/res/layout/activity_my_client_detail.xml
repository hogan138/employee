<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#ED476E">
    <TextView
      android:id="@+id/tv_topbar_left"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="8dp"
      android:drawableLeft="@drawable/nav_back_w"
      android:textColor="@color/color_1a"
      android:textSize="16sp"/>

    <TextView
      android:id="@+id/tv_topbar_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:gravity="center"
      android:maxLines="1"
      android:ellipsize="end"
      android:textColor="@color/color_ff"
      android:textSize="18sp"/>
  </RelativeLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_my_gradient_shape"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_category"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/tv_ff_stroke_shape"
      android:layout_gravity="center"
      android:layout_marginTop="8dp"
      android:paddingLeft="12dp"
      android:paddingRight="12dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      android:textSize="12sp"
      android:textColor="@color/color_ff"
      android:text="连锁"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="24dp"
      android:paddingTop="24dp"
      android:orientation="horizontal">

      <LinearLayout
        android:id="@+id/ll_client_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/btn_setprice"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:textSize="13sp"
          android:textColor="@color/color_ff"
          android:text="一客一价"/>
      </LinearLayout>
      <LinearLayout
        android:id="@+id/ll_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/btn_signin"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:textSize="13sp"
          android:textColor="@color/color_ff"
          android:text="签到"/>
      </LinearLayout>
      <LinearLayout
        android:id="@+id/ll_dai_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/btn_order"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:textSize="13sp"
          android:textColor="@color/color_ff"
          android:text="代下单"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ff"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/color_4d"
      android:text="药店信息"
      />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:orientation="horizontal">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="店内固话"
        />
      <TextView
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="0571 - 5568412"
        />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:orientation="horizontal">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="地址"
        />
      <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="杭州市西湖区西溪国际A幢601"
        />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:orientation="horizontal">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="联系人"
        />
      <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="张青青"
        />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="手机号"
        />
      <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="13000000001"
        />
    </LinearLayout>
  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/color_ff"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/color_4d"
      android:text="回款"
      />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/tv_credit_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="待回款 356.00元"
        />
      <TextView
        android:id="@+id/tv_credit_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="可用授信额度: 6744.00元"
        />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/tv_bill_repayment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/color_b2"
        android:text="默认账期2个月 还款日15号"
        />
      <TextView
        android:id="@+id/tv_credit_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="13sp"
        android:textColor="@color/color_b2"
        android:text="总授信额度: 100000.00元"
        />
    </LinearLayout>
    <TextView
      android:id="@+id/tv_credit_apply"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_gravity="right"
      android:textSize="13sp"
      android:textColor="@color/color_336"
      android:text="申请临时调额"
      />
  </LinearLayout>



  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/color_ff"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/color_4d"
      android:text="报表"
      />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:orientation="horizontal">
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
          android:id="@+id/tv_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/color_336"
          android:textSize="15sp"
          android:text="0单"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:textColor="@color/color_4d"
          android:textSize="15sp"
          android:text="订单总数"/>
      </LinearLayout>
      <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_e5"/>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
          android:id="@+id/tv_total"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/color_336"
          android:textSize="15sp"
          android:text="0元"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="6dp"
          android:textColor="@color/color_4d"
          android:textSize="15sp"
          android:text="订单总额"/>
      </LinearLayout>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="16dp"
      android:background="@color/color_e5"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:textColor="@color/color_33"
      android:textSize="14sp"
      android:text="订单总数"/>

    <com.github.mikephil.charting.charts.LineChart
      android:id="@+id/chart_count"
      android:layout_width="match_parent"
      android:layout_height="180dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:textColor="@color/color_33"
      android:textSize="14sp"
      android:text="订单总额"/>

    <com.github.mikephil.charting.charts.LineChart
      android:id="@+id/chart_total"
      android:layout_width="match_parent"
      android:layout_height="180dp"/>

  </LinearLayout>



  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@color/color_ff"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/color_4d"
      android:text="药店执照"
      />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="16dp">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="采购委托书效期"/>
      <TextView
        android:id="@+id/tv_purchase_proxy_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="2025-09-04"/>
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/color_e5"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="16dp">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="收货委托书效期"/>
      <TextView
        android:id="@+id/tv_receiving_proxy_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="2025-09-04"/>
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/color_e5"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="16dp">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="采购合同效期"/>
      <TextView
        android:id="@+id/tv_purchase_contract_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="2025-09-04"/>
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/color_e5"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="16dp">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="许可证号效期"/>
      <TextView
        android:id="@+id/tv_license_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="2025-09-04"/>
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/color_e5"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="16dp">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="营业执照号效期"/>
      <TextView
        android:id="@+id/tv_business_license_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="2025-09-04"/>
    </LinearLayout>
    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/color_e5"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="16dp">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/color_b2"
        android:text="GSP号效期"/>
      <TextView
        android:id="@+id/tv_gps_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_4d"
        android:text="2025-09-04"/>
    </LinearLayout>


  </LinearLayout>

    </LinearLayout>
  </ScrollView>

</LinearLayout>
