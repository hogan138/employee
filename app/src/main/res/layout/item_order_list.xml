<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/color_ff"
  android:orientation="vertical"
  android:padding="16dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
      android:id="@+id/tv_order_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/color_336"
      android:textSize="14sp"
      android:text="已完成"/>
  </RelativeLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">
    <TextView
      android:id="@+id/tv_order_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/color_4d"
      android:textSize="14sp"
      android:text="订单号: 3014751475254"/>
    <TextView
      android:id="@+id/tv_order_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/color_b3"
      android:textSize="14sp"
      android:text="2017/05/06 22:35"/>
  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_dash_line"
    android:layerType="software"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_product"
      android:layout_weight="1"
      android:clickable="false"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tv_product_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="6dp"
      android:drawableRight="@drawable/icon_arrow_right"
      android:drawablePadding="8dp"
      android:textSize="15sp"
      android:textColor="@color/color_33"
      android:text="共2件"/>
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:background="@color/color_cc"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">
    <TextView
      android:id="@+id/tv_dai"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#982FFD"
      android:textSize="14sp"
      android:text="代下单(张青青)"/>
    <TextView
      android:id="@+id/tv_total"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:textColor="@color/color_4d"
      android:textSize="14sp"
      android:text="共3种商品 合计：￥540.00"/>
  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="16dp"
    android:background="@color/color_cc"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layout_marginTop="16dp">
    <TextView
      android:visibility="gone"
      android:id="@+id/tv_cancel_order"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/tv_80_shape"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      android:textColor="@color/color_80"
      android:textSize="14sp"
      android:text="取消订单"/>
    <TextView
      android:visibility="gone"
      android:id="@+id/tv_pay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:background="@drawable/tv_red_shape"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      android:textColor="@color/color_336"
      android:textSize="14sp"
      android:text="付款"/>
    <TextView
      android:visibility="gone"
      android:id="@+id/tv_shouhuo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:background="@drawable/tv_red_shape"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="6dp"
      android:paddingBottom="6dp"
      android:textColor="@color/color_336"
      android:textSize="14sp"
      android:text="确认收货"/>
  </LinearLayout>

</LinearLayout>
