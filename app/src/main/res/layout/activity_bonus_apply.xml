<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <include layout="@layout/common_topbar" />


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ff"
    android:padding="16dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/color_1a"
      android:textSize="16sp"
      android:text="提现"/>
    <EditText
      android:id="@+id/edt_amount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:inputType="numberDecimal"
      android:layout_marginLeft="16dp"
      android:background="@null"
      android:textColorHint="@color/color_cc"
      android:textSize="15sp"
      android:hint="请输入提现金额"/>
  </LinearLayout>

  <TextView
    android:id="@+id/tv_can_cash"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:textColor="@color/color_b3"
    android:textSize="14sp"
    android:text="可提现 5426.00元"/>

  <TextView
    android:id="@+id/tv_bonus_apply"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="56dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:gravity="center"
    android:background="@drawable/btn_336_shape"
    android:textColor="@color/color_ff"
    android:textSize="16sp"
    android:text="提现"/>

</LinearLayout>

