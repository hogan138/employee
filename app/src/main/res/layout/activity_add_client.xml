<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical">

  <include layout="@layout/common_topbar" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ff"
    android:padding="16dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/color_1a"
      android:textSize="16sp"
      android:text="客户名称"/>
    <EditText
      android:id="@+id/edt_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="16dp"
      android:background="@null"
      android:textColorHint="@color/color_cc"
      android:textSize="15sp"
      android:hint="请输入客户全名"/>
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_e5"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ff"
    android:padding="16dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/color_1a"
      android:textSize="16sp"
      android:text="联系方式"/>
    <EditText
      android:id="@+id/edt_tel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="16dp"
      android:background="@null"
      android:textColorHint="@color/color_cc"
      android:textSize="15sp"
      android:hint="请输入店内固话"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@color/color_ff"
    android:padding="16dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/color_1a"
      android:textSize="16sp"
      android:text="描述"/>
    <EditText
      android:id="@+id/edt_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="16dp"
      android:background="@null"
      android:textColorHint="@color/color_cc"
      android:textSize="15sp"
      android:hint="选填"/>
  </LinearLayout>


  <TextView
    android:id="@+id/tv_submit"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="56dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:gravity="center"
    android:background="@drawable/btn_336_shape"
    android:textColor="@color/color_ff"
    android:textSize="16sp"
    android:text="提交申请"/>

</LinearLayout>
