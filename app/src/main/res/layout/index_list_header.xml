<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:background="@color/color_ff"
  tools:context="com.wanchang.employee.ui.PurchaseFragment">

  <com.youth.banner.Banner
    android:id="@+id/banner"
    android:layout_width="match_parent"
    android:layout_height="180dp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/iv_area_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/index_icon01"/>
      <TextView
        android:id="@+id/tv_area_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_33"
        android:textSize="13sp"
        android:text="贴牌专区"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/iv_area_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/index_icon02"/>
      <TextView
        android:id="@+id/tv_area_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_33"
        android:textSize="13sp"
        android:text="采购专区"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/iv_area_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/index_icon03"/>
      <TextView
        android:id="@+id/tv_area_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_33"
        android:textSize="13sp"
        android:text="疾病分类"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/iv_area_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/index_icon04"/>
      <TextView
        android:id="@+id/tv_area_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_33"
        android:textSize="13sp"
        android:text="全部分类"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="3">
      <ImageView
        android:id="@+id/iv_recommend_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/index_pic01"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/iv_recommend_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/index_pic02"/>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="1">
      <ImageView
        android:id="@+id/iv_recommend_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/index_pic03"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_weight="3">
      <ImageView
        android:id="@+id/iv_recommend_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/index_pic04"/>
    </LinearLayout>
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="16dp"
    android:background="@color/color_f5"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:drawableLeft="@drawable/index_clock"
      android:drawablePadding="6dp"
      android:textColor="@color/color_00"
      android:textSize="15sp"
      android:text="限时抢购"/>

    <TextView
      android:id="@+id/limit_sale_more"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:drawableRight="@drawable/icon_arrow_right"
      android:drawablePadding="6dp"
      android:layout_alignParentRight="true"
      android:textColor="@color/color_66"
      android:textSize="12sp"
      android:text="更多"/>
  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_ec"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
      android:id="@+id/rl_time_limit_1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="16dp"
      android:layout_weight="1">

      <TextView
        android:id="@+id/tv_title_1"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_33"
        android:textSize="13sp"
        android:text="琥珀酸美托洛尔缓释片"/>
      <TextView
        android:layout_below="@+id/tv_title_1"
        android:id="@+id/tv_specs_1"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_99"
        android:textSize="10sp"
        android:text="100ml/瓶"/>
      <TextView
        android:layout_below="@+id/tv_specs_1"
        android:id="@+id/tv_price_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_434"
        android:textSize="11sp"
        android:text="¥ 98.00"/>
      <ImageView
        android:id="@+id/iv_pic_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_default_image"/>
    </RelativeLayout>
    <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:background="@color/color_ec"/>
    <RelativeLayout
      android:id="@+id/rl_time_limit_2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="16dp"
      android:layout_weight="1">
      <TextView
        android:id="@+id/tv_title_2"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_33"
        android:textSize="13sp"
        android:text="琥珀酸美托洛尔缓释片"/>
      <TextView
        android:layout_below="@+id/tv_title_2"
        android:id="@+id/tv_specs_2"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_99"
        android:textSize="10sp"
        android:text="100ml/瓶"/>
      <TextView
        android:layout_below="@+id/tv_specs_2"
        android:id="@+id/tv_price_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_434"
        android:textSize="11sp"
        android:text="¥ 98.00"/>
      <ImageView
        android:id="@+id/iv_pic_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_default_image"/>
    </RelativeLayout>
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="16dp"
    android:background="@color/color_f5"/>

</LinearLayout>
