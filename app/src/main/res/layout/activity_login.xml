<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/color_ff"
  android:orientation="vertical">

  <include
    layout="@layout/common_topbar"/>

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="36dp"
    android:layout_gravity="center"
    android:src="@drawable/logo"/>

  <LinearLayout
    android:id="@+id/ll_mode_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textColor="@color/color_1a"
        android:textSize="16sp"/>
      <EditText
        android:id="@+id/edt_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:textSize="15sp"
        android:hint="请输入账号"
        android:background="@null"
        android:textColorHint="@color/color_cc"/>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="8dp"
      android:background="@color/color_cc"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:orientation="horizontal">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textColor="@color/color_1a"
        android:textSize="16sp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <EditText
          android:id="@+id/edt_password"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPassword"
          android:layout_weight="1"
          android:textSize="15sp"
          android:hint="请输入密码"
          android:background="@null"
          android:textColorHint="@color/color_cc"/>
        <ImageView
          android:id="@+id/iv_password_show"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/icon_hide"/>
      </LinearLayout>

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="8dp"
      android:background="@color/color_cc"/>

  </LinearLayout>


  <LinearLayout
    android:visibility="gone"
    android:id="@+id/ll_mode_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textColor="@color/color_1a"
        android:textSize="16sp"/>
      <EditText
        android:id="@+id/edt_login_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:inputType="phone"
        android:textSize="15sp"
        android:hint="请输入手机号"
        android:background="@null"
        android:textColorHint="@color/color_cc"/>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="8dp"
      android:background="@color/color_cc"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:orientation="horizontal">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:textColor="@color/color_1a"
        android:textSize="16sp"/>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <EditText
          android:id="@+id/edt_login_captcha"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:layout_weight="1"
          android:textSize="15sp"
          android:hint="请输入验证码"
          android:background="@null"
          android:textColorHint="@color/color_cc"/>
        <TextView
          android:id="@+id/tv_login_get_captcha"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="发送验证码"
          android:textSize="15sp"
          android:textColor="@color/color_4d"/>
      </LinearLayout>

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="8dp"
      android:background="@color/color_cc"/>

  </LinearLayout>



  <TextView
    android:id="@+id/tv_login_submit"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:layout_marginTop="36dp"
    android:background="@drawable/btn_336_shape"
    android:gravity="center"
    android:textColor="@color/color_ff"
    android:textSize="16sp"
    android:text="登录"/>

  <TextView
    android:id="@+id/tv_change_mode"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:textColor="@color/color_66"
    android:textSize="14sp"
    android:text="验证码登录"/>

</LinearLayout>
