<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/color_ff"
  android:orientation="vertical"
  android:padding="16dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/tv_bonus_category"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="15sp"
      android:textColor="@color/color_1a"
      android:text="下单"/>

    <TextView
      android:id="@+id/tv_bonus_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/color_1a"
      android:text="500.00"/>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_order_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/tv_product_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="13sp"
      android:textColor="@color/color_80"
      android:text="克林霉素磷酸酯凝胶"/>

    <TextView
      android:id="@+id/tv_product_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="13sp"
      android:textColor="@color/color_80"
      android:text="x 25"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/tv_explain"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="13sp"
      android:textColor="@color/color_b3"
      android:text="订单号：2545645633114566"/>

    <TextView
      android:id="@+id/tv_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="13sp"
      android:textColor="@color/color_b3"
      android:text="2017.5.6 12:21"/>

  </LinearLayout>


</LinearLayout>
