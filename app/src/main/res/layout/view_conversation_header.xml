<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="@color/color_ff"
  xmlns:app="http://schemas.android.com/apk/res-auto">


  <RelativeLayout
    android:id="@+id/rl_promotion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="7dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    <FrameLayout
      android:id="@+id/fl_promotion_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/msg_check"/>
      <ImageView
        android:visibility="gone"
        android:id="@+id/iv_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/oval"/>
    </FrameLayout>

    <RelativeLayout
      android:layout_toRightOf="@+id/fl_promotion_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="12dp">
      <TextView
        android:id="@+id/tv_promotion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/color_1a"
        android:text="消息审核"/>
      <TextView
        android:id="@+id/tv_promotion_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="13sp"
        android:textColor="@color/color_99"
        android:text="下午 14:12"/>
      <TextView
        android:layout_below="@+id/tv_promotion_title"
        android:id="@+id/tv_promotion_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:textColor="@color/color_80"
        android:text="暂无消息"/>
    </RelativeLayout>

  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_e5"/>

  <RelativeLayout
    android:id="@+id/rl_system"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="7dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    <FrameLayout
      android:id="@+id/fl_system_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/avatar_systeminfo"/>
      <ImageView
        android:visibility="gone"
        android:id="@+id/iv_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/oval"/>
    </FrameLayout>
    <RelativeLayout
      android:layout_toRightOf="@+id/fl_system_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="12dp">
      <TextView
        android:id="@+id/tv_system_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/color_1a"
        android:text="系统消息"/>
      <TextView
        android:id="@+id/tv_system_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="13sp"
        android:textColor="@color/color_99"
        android:text="下午 14:12"/>
      <TextView
        android:layout_below="@+id/tv_system_title"
        android:id="@+id/tv_system_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:textColor="@color/color_80"
        android:text="暂无消息"/>
    </RelativeLayout>

  </RelativeLayout>

  <View
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_e5"/>

  <RelativeLayout
    android:visibility="gone"
    android:id="@+id/rl_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="7dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    <FrameLayout
      android:id="@+id/fl_order_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/avatar_orderlist"/>
      <ImageView
        android:visibility="gone"
        android:id="@+id/iv_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/oval"/>
    </FrameLayout>
    <RelativeLayout
      android:layout_toRightOf="@+id/fl_order_pic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="12dp">
      <TextView
        android:id="@+id/tv_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/color_1a"
        android:text="订单助手"/>
      <TextView
        android:id="@+id/tv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="13sp"
        android:textColor="@color/color_99"
        android:text="下午 14:12"/>
      <TextView
        android:layout_below="@+id/tv_order_title"
        android:id="@+id/tv_order_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="14sp"
        android:textColor="@color/color_80"
        android:text="暂无消息"/>
    </RelativeLayout>

  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_e5"/>

</LinearLayout>
