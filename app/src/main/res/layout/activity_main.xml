<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tl="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <FrameLayout
    android:id="@+id/fl_change"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
  </FrameLayout>

  <com.flyco.tablayout.CommonTabLayout
    android:id="@+id/tl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/color_ff"
    tl:tl_indicator_height="0dp"
    tl:tl_textSelectColor="@color/color_336"
    tl:tl_textUnselectColor="@color/color_80"
    tl:tl_textsize="12sp"
    tl:tl_underline_color="@android:color/darker_gray"
    tl:tl_underline_gravity="TOP"
    tl:tl_underline_height="0.5dp"/>

</LinearLayout>
